<Page
    x:Class="RubiksCubeXAMLApp.OpenGLESPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RubiksCubeXAMLApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">


    <SwapChainPanel x:Name="swapChainPanel">
        <Grid.ColumnDefinitions>
            <ColumnDefinition ></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        </StackPanel>

        <CaptureElement Grid.Column="3" x:Name="captureElement" Width="Auto" Height="Auto"/>
        <TextBlock x:Name="progressText" Text="" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" />

        <Button x:Name="captureSolveButton" Click="captureSolveButton_Click"  Grid.Column="0" Grid.Row="3" Foreground="Black" FontSize="50" HorizontalAlignment="Center">Capture</Button>
        
    </SwapChainPanel>
</Page>
